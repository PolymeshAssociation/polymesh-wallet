{
  "extends": "@polkadot/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@polymathnetwork/extension": ["packages/extension/src"],
      "@polymathnetwork/extension/*": ["packages/extension/src/*"],
      "@polymathnetwork/extension-ui": ["packages/ui/src"],
      "@polymathnetwork/extension-ui/*": ["packages/ui/src/*"],
      "@polymathnetwork/extension-core": ["packages/core/src"],
      "@polymathnetwork/extension-core/*": ["packages/core/src/*"],
    },
    "skipLibCheck": true
  }
}